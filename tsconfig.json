{
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"types": ["node"],
		"target": "ESNext",
		"module": "ESNext",

		// Build
		"outDir": "build",
		"declaration": true,
		"isolatedDeclarations": true,

		// Bundler
		"moduleResolution": "Bundler",
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,

		// Resolution
		"declarationMap": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@braebo/ansi": ["src/index.ts"],
			"@braebo/ansi/*": ["src/*"]
		},

		// Rules
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noPropertyAccessFromIndexSignature": true,

		// JSR
		"noImplicitReturns": true
	},
	"include": ["src"]
}
