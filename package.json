{
	"name": "@braebo/ansi",
	"version": "0.0.1",
	"description": "ANSI code helpers for node.js and chrome.",
	"keywords": [
		"ansi",
		"color",
		"terminal",
		"console",
		"logger",
		"typescript"
	],
	"license": "MIT",
	"author": "braebo <brady@braebo.dev>",
	"type": "module",
	"exports": {
		".": {
			"types": "./build/index.d.ts",
			"import": "./build/index.js"
		}
	},
	"types": "./build/index.d.ts",
	"files": [
		"build",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "rolldown src/index.ts --config rolldown.config.ts",
		"build-watch": "rolldown src/index.ts --config rolldown.config.ts --watch",
		"dev": "bun run --watch demo.ts",
		"format": "prettier --write .",
		"check": "pnpm run --parallel /^check:.*/",
		"check:tsc": "pnpm tsc --noEmit",
		"check:publint": "publint",
		"check:jsr": "jsr publish --dry-run"
	},
	"devDependencies": {
		"@changesets/cli": "2.28.1",
		"@svitejs/changesets-changelog-github-compact": "1.2.0",
		"@types/node": "22.13.9",
		"changeset": "0.2.6",
		"jsr": "0.13.4",
		"publint": "0.3.8",
		"rolldown": "1.0.0-beta.3",
		"typescript": "5.8.2",
		"unplugin-isolated-decl": "0.13.1",
		"vitest": "3.0.8"
	}
}
